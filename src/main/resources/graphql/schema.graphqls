type Query {
    bookById(id: ID): Book
    getBook: Book
}

type Mutation {
  createBookWithAuthor(bookName: String!, pageCount: Int!, author: AuthorInput!): Book
}

input AuthorInput {
  firstName: String!
  lastName: String!
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}